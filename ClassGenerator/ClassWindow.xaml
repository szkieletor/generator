<Window x:Class="ClassGenerator.ClassWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ClassWindow" Height="300" Width="300">
    
    <Grid Style="{StaticResource StandardGrid}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <GroupBox Header="Text" Grid.ColumnSpan="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label>Nazwa klasy</Label>
                <TextBox Name="ClassName" Grid.Column="1" Style="{StaticResource StandardTextBox}"/>
                <Label Grid.Row="1">Hermetyzacja</Label>
                <ComboBox Name="EncapsulationComboBox" Grid.Column="1" Grid.Row="1"/>
                <Label Grid.Row="2">Zwracany typ</Label>
                <ComboBox Name="ReturnValueComboBox" Grid.Column="1" Grid.Row="2"/>
                <CheckBox Content="Abstrakcyjna" Grid.ColumnSpan="2" Grid.Row="3"/>
            </Grid>
        </GroupBox>
        <Button Name="AddEditButton" Grid.Row="1" Style="{StaticResource StandardButton}">Dodaj</Button>
        <Button Name="CancelButton" Grid.Column="1" Grid.Row="1" Style="{StaticResource StandardButton}">Anuluj</Button>
        <RichTextBox Name="GeneratedClassTextBox" Grid.Column="2" Grid.RowSpan="2" MinWidth="100" Style="{StaticResource StandardRichTextBox}"></RichTextBox>
    </Grid>
</Window>
