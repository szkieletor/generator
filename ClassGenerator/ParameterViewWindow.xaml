<Window x:Class="ClassGenerator.ParameterViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lista parametrow" Height="270" Width="500" MinHeight="270" MinWidth="400">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="380"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label>Lista parametrów</Label>
        <ListView x:Name="ParameterViewList" Style="{StaticResource StandardListView}" Width="auto">
            <ListView.View>

                <GridView ColumnHeaderToolTip="Typy i nazwy zmiennych">

                    <GridViewColumn DisplayMemberBinding=
                          "{Binding Path=Type}" 
                      Header="Typ" Width="90"/>

                    <GridViewColumn DisplayMemberBinding=
                          "{Binding Path=Name}" 
                     Header="Nazwa" Width="90"/>

                    <GridViewColumn DisplayMemberBinding=
                          "{Binding Path=GetterEncapsulation}" 
                     Header="Getter" Width="90"/>

                    <GridViewColumn DisplayMemberBinding=
                          "{Binding Path=SetterEncapsulation}" 
                     Header="Setter" Width="90"/>
                </GridView>
            </ListView.View>
        </ListView>
        <!-- <Grid.Column="1" >
            <Button Name="AddMethod" Content="Dodaj" Margin="15"></Button>
            <Button Name="RemoveMethod" Content="Usun" Margin="15"></Button>
            <Button Name="EditMethod" Content="Edytuj" Margin="15"></Button>
            <Button Name="SaveMethod" Content="Zapisz" Margin="15"></Button>
        </>-->
        <Grid Grid.Column="1" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Button Name="AddParameter" Content="Dodaj" Margin="15" Padding="5" Grid.Row="0" ToolTip="Otwiera okienko tworzenia nowego pola" Click="AddParameter_Click"></Button>
            <Button Name="RemoveParameter" Content="Usun" Margin="15" Padding="5" Grid.Row="1" ToolTip="Usuwa zaznaczone pola z listy"></Button>
            <Button Name="EditParameter" Content="Edytuj" Margin="15" Padding="5" Grid.Row="2" ToolTip="W celu zmiany składowych pola wybierz tę opcję" Click="EditParameter_Click"></Button>
            <Button Name="SaveParameter" Content="Zapisz" Margin="15" Padding="5" Grid.Row="3" ToolTip="Zapisuje wszystkie dokonane zmiany na liście pól"></Button>
        </Grid>
    </Grid>
</Window>
